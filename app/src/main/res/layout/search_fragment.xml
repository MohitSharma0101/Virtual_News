<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/AppBackground"
    tools:context=".ui.fragments.SearchFragment">

    <com.eldersoss.elderssearchview.EldersSearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:esvMargin="5dp"
        android:visibility="gone"
        app:esvBackground="@drawable/search_bar_background"
        app:esvElevation="7dp"
        app:esvHintText="Search News"
        app:esvNoFilter="false"
        app:esvSuggestionsEnabled="false" />



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/search_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="0dp" >
        <ImageButton
            android:id="@+id/ib_clear_selection"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_clear_24"
            android:tint="?attr/IconTint"
            android:background="@color/transparent"
            android:layout_gravity="center|start"
            android:layout_margin="10dp"
            android:contentDescription="clear selection mode" />
        <TextView
            android:id="@+id/top_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:fontFamily="sans-serif-medium"
            android:text="Categories"
            android:paddingStart="10dp"
            android:layout_marginStart="30dp"
            android:textColor="?attr/Heading_color"
            android:textSize="25sp" />
        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search"
            android:background="@color/transparent"
            android:layout_gravity="center|end"
            android:layout_marginEnd="10dp"
            android:contentDescription="search news" />


    </com.google.android.material.card.MaterialCardView>
    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:spb_sections_count="4"
        app:spb_color="@color/light_blue"
        app:spb_colors="@array/mycolors"
        app:spb_speed="2.0"
        app:spb_stroke_width="4dp"
        app:spb_stroke_separator_length="4dp"
        app:spb_reversed="true"
        app:spb_mirror_mode="true"
        android:visibility="gone"
        app:spb_progressiveStart_activated="true"
        app:spb_progressiveStart_speed="1.5"
        app:spb_progressiveStop_speed="3.4"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_rec_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        >
        <include layout="@layout/categories_layout" />

    </ScrollView>

</LinearLayout>