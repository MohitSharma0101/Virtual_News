    <me.ibrahimsn.lib.SmoothBottomBar
        app:layout_optimizationLevel="cache_measures"
        android:layout_gravity="bottom"
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_margin="1dp"
        app:activeItem="@id/home"
        app:backgroundColor="?attr/BottomBarBackgroundColor"
        app:cornerRadius="0dp"
        app:iconSize="25dp"
        app:iconTint="?attr/IconTint"
        app:iconTintActive="?attr/BottomBarIconTintActive"
        app:indicatorColor="?attr/BottomBarIndicatorColor"
        app:indicatorRadius="20dp"
        app:itemPadding="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom"
        app:sideMargins="10dp"
        app:textColor="?attr/BottomBarTextColor"
        app:textSize="15sp" />

